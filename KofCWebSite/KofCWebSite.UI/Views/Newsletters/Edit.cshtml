@model KofCWebSite.Core.Models.NewsletterEditViewModel
@{
    ViewData["Title"] = "Edit Newsletter";
}

    <div class="section-header wow fadeInRight" style="visibility:hidden;">
        <h2><span class="fa fa-file-pdf"></span> @Model.Title</h2>
    </div>

<section id="team" class="wow fadeInUpBig" style="padding-top:0px; margin-bottom:54px;visibility:hidden;">
    <form name="formUploadANewsletter" asp-controller="Newsletters" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="row" style="padding:0;">
            <div class="card-box-kofc col-lg-12 card shadow">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="col-sm-12 col-sm-padding">
                            <span class="far fa-file-pdf fa-2x text-danger"></span>&nbsp;
                            <a target="_blank" asp-controller="Newsletters" asp-action="Download" asp-route-id="@Model.Id">@Model.Filename</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12 col-sm-padding">
                            <label asp-for="FormFile" class="col-form-label col-sm-12">Upload A Different Newsletter</label>
                            <div class="col-sm-12">
                                <input asp-for="FormFile" class="form-control custom-file-input">
                                <label id="photo-upload-label" class="custom-file-label">Choose Newsletter(pdf)...</label>
                                <span asp-validation-for="FormFile" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12 col-sm-padding" style="float:left;">
                            <label asp-for="Description" class="col-form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="2" type="text"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer card-text">
                    <div style="float:right;width:39%;height:100%;line-height:100%;">
                        <div style="float:right;height:100%;line-height:100%;">
                            <a class="btn btn-secondary" asp-action="List" asp-controller="Newsletters"><span class="fa fa-fast-backward"></span> Cancel</a>
                            <button id="btnSubmit" class="btn btn-success" asp-action="Edit" asp-controller="Newsletters"><span class="fa fa-save"></span> Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    <script>
            $(document).ready(function () {
                //$("#alertRow").fadeOut(5000);
                $(".custom-file-input").on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $("#photo-upload-label").html(fileName);
                });
            });
    </script>
}
